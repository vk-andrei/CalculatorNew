<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculatorNew" parent="Theme.MaterialComponents.DayNight.NoActionBar">
         Primary brand color.
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>        
    
        <item name="theme_for_buttons">@style/Style_one</item>
        <item name="theme_for_clear_and_equal">@style/Style_one.EqualAndClear</item>
        <item name="theme_for_operators">@style/Style_one.Operators</item>
    
    </style>
    
    <style name="Theme.CalculatorNew.V2">
        <item name="theme_for_buttons">@style/Style_two</item>
        <item name="theme_for_clear_and_equal">@style/Style_two.EqualAndClear</item>
        <item name="theme_for_operators">@style/Style_two.Operators</item>

    </style>
    
    






</resources>