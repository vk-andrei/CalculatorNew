<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CalculatorNew" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--Primary brand color-->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="theme_for_buttons">@style/Style_one</item>
        <item name="theme_for_clear_and_equal">@style/Style_one.EqualAndClear</item>
        <item name="theme_for_operators">@style/Style_one.Operators</item>

        <item name="theme_for_main_background">@style/Style_for_main_background_one</item>

        <item name="theme_for_card_view">@style/Style_Material_Card_View</item>

        <item name="theme_for_display">@style/Style_for_display_one</item>

    </style>

    <!--THEME_TWO-->
    <style name="Theme.CalculatorNew.V2">
        <item name="theme_for_buttons">@style/Style_two</item>
        <item name="theme_for_clear_and_equal">@style/Style_two.EqualAndClear</item>
        <item name="theme_for_operators">@style/Style_two.Operators</item>
        <item name="theme_for_main_background">@style/Style_for_main_background_two</item>
        <item name="theme_for_display">@style/Style_for_display_two</item>
    </style>

    <!--THEME_THREE-->
    <style name="Theme.CalculatorNew.V3">
        <item name="theme_for_buttons">@style/Style_three</item>
        <item name="theme_for_clear_and_equal">@style/Style_three.EqualAndClear</item>
        <item name="theme_for_operators">@style/Style_three.Operators</item>
        <item name="theme_for_main_background">@style/Style_for_main_background_three</item>
        <item name="theme_for_display">@style/Style_for_display_three</item>
    </style>

</resources>