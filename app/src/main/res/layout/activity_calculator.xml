<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/theme_for_main_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.CalculatorActivity">

    <TextView
        android:id="@+id/display"
        style="?attr/theme_for_display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_padding"
        android:gravity="end|bottom"
        android:hint="@string/displayHint"
        android:importantForAutofill="no"
        android:textAlignment="textEnd"
        android:textSize="@dimen/text_on_display"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/main_constraint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/main_constraint"
        tools:ignore="SpUsage" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/main_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/BTN_clear"
                    style="?attr/theme_for_clear_and_equal"
                    android:text="@string/c" />

                <Button
                    android:id="@+id/BTN_backspace"
                    style="?attr/theme_for_operators"
                    android:text="@string/back" />

                <Button
                    android:id="@+id/BTN_sqrt"
                    style="?attr/theme_for_operators"
                    android:text="@string/sqrt" />

                <Button
                    android:id="@+id/BTN_divide"
                    style="?attr/theme_for_operators"
                    android:text="@string/divide" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/BTN_seven"
                    style="?attr/theme_for_buttons"
                    android:text="@string/seven" />

                <Button
                    android:id="@+id/BTN_eight"
                    style="?attr/theme_for_buttons"
                    android:text="@string/eight" />

                <Button
                    android:id="@+id/BTN_nine"
                    style="?attr/theme_for_buttons"
                    android:text="@string/nine" />

                <Button
                    android:id="@+id/BTN_mult"
                    style="?attr/theme_for_operators"
                    android:text="@string/mult" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/BTN_four"
                    style="?attr/theme_for_buttons"
                    android:text="@string/four" />

                <Button
                    android:id="@+id/BTN_five"
                    style="?attr/theme_for_buttons"
                    android:text="@string/five" />

                <Button
                    android:id="@+id/BTN_six"
                    style="?attr/theme_for_buttons"
                    android:text="@string/six" />

                <Button
                    android:id="@+id/BTN_minus"
                    style="?attr/theme_for_operators"
                    android:text="@string/minus" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/BTN_one"
                    style="?attr/theme_for_buttons"
                    android:text="@string/one" />

                <Button
                    android:id="@+id/BTN_two"
                    style="?attr/theme_for_buttons"
                    android:text="@string/two" />

                <Button
                    android:id="@+id/BTN_three"
                    style="?attr/theme_for_buttons"
                    android:text="@string/three" />

                <Button
                    android:id="@+id/BTN_plus"
                    style="?attr/theme_for_operators"
                    android:text="@string/plus" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/BTN_style"
                    style="?attr/theme_for_buttons"
                    android:text="@string/style" />

                <Button
                    android:id="@+id/BTN_zero"
                    style="?attr/theme_for_buttons"
                    android:text="@string/zero" />

                <Button
                    android:id="@+id/BTN_point"
                    style="?attr/theme_for_buttons"
                    android:text="@string/point" />

                <Button
                    android:id="@+id/BTN_equal"
                    style="?attr/theme_for_clear_and_equal"
                    android:text="@string/equal" />

            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>